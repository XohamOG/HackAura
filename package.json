{
  "name": "git-hunters",
  "version": "1.0.0",
  "description": "Decentralized bounty platform for GitHub repositories on HelaChain",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd Backend && npm start",
    "dev:frontend": "cd Frontend && npm run dev",
    "build": "cd Frontend && npm run build",
    "start": "cd Backend && npm start",
    "install:all": "npm install && cd Backend && npm install && cd ../Frontend && npm install",
    "clean": "rm -rf node_modules Backend/node_modules Frontend/node_modules"
  },
  "keywords": [
    "blockchain",
    "bounty",
    "github",
    "decentralized",
    "helachain",
    "ipfs",
    "web3"
  ],
  "author": "XohamOG",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/XohamOG/HackAura.git"
  },
  "workspaces": [
    "Backend",
    "Frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}